package:
    name: respondo
    version: @RESPONDO_VERSION@

source:
    path: ../

build:
    noarch: python
    number: 0
    script: "{{ PYTHON }} -m pip install . --no-deps -vv"

requirements:
    host:
        - python >=3.6
        - pip
    run:
        - python >=3.6
        - numpy >=1.14
        - adcc >=0.15.7

test:
    requires:
        - pytest
        - zarr
    imports:
        - respondo
        - adcc
    # commands:
        # Inspect linkage
        # - conda inspect linkages --show-files --groupby=dependency respondo
        # TODO: actually run tests

about:
    home: https://github.com/gator-program/respondo
    dev_url: https://github.com/gator-program/respondo
    license: GPL-3.0
    license_family: GPL
    license_file: {{ SRC_DIR }}/LICENSE
    summary: "respondo - Library for Response Functions"
    description: |
      respondo is a library for evaluating response functions
      in the ADC/ISR framework.
